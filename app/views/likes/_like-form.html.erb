<%= form_with scope: 'like', url: '/likes' do |form| %>
  <%= form.hidden_field :likeable_type, value: type.class %>
  <%= form.hidden_field :likeable_id, value: type.id %>
  <%= form.hidden_field :user_id, value: current_user.id %>

  <%= button_tag type: 'submit', class: 'button is-text' do %>
    <i>like icon <%=type.likes.size %></i>
  <% end %>
<% end %>