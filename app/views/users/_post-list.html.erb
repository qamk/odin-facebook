<% posts.each do |post| %>
  <article class="media">
    <div class="media-left">
      <%# <figure>INSERT IMAGE HERE</figure> %>
      <%= render 'user-avatar', user: post.user %>
    </div>
    <div class="media-content">
      <div class="content">
        <% unless post.user == current_user  %>
          <%= link_to user_path(post.user) do %>
            <p class="has-text-weight-semibold"><%= post.user.username %></p>
          <% end %>
        <% else %>
          <p class="has-text-weight-semibold"><%= post.user.username %></p>
        <% end %>
        <p class="has-text-weight-normal has-text-left"><%= post.body %></p>
      </div>
      <nav class="level is-mobile">
        <div class="level-item">
          <%= render 'likes/like-form', type: post %>
        </div>
        <div class="level-item">
          <%= link_to post_path(post) do %>
            <span class="icon-text">
              <span class="icon has-text-grey">
                <i class="fas fa-comment-alt"></i>
              </span>
              <span><%= post.comments.size %></span>
            </span>
          <% end %>
        </div>
      </nav>
    </div>
    <div class="media-right">
      <div class="content">
        <small class="has-text-weight-light"><%= time_ago_in_words(post.created_at.time) %> ago</small>
      </div>
    </div>
  </article>
<% end %>
