<%= form_with model: user, url: '/timeline' do |form| %>

  <div class="box">
    <div class="field">
      <%= form.label :bio, 'Edit your bio:', class: 'label' %>
      <div class="control">
        <%= form.text_area :bio, size: '10x5', class: 'textarea'%>
      </div>
    </div>
  </div>

  <%= form.submit 'Update your bio', class: 'button is-link is-inverted' %>
<% end %>